{
  "name": "next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "test": "jest --env=jest-environment-jsdom-sixteen",
    "serve": "serve -s build",
    "lint": "eslint . --ext js,ts,tsx",
    "typecheck": "tsc --noEmit",
    "analyze": "source-map-explorer build/static/js/**/*.js",
    "ci": "npm-run-all --parallel --print-label --continue-on-error build test typecheck",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@emotion/react": "^11.0.0-next.12",
    "@mdi/js": "^5.3.45",
    "fchat": "^1.4.0",
    "focus-visible": "^5.1.0",
    "fuzzysearch": "^1.0.3",
    "idb": "^5.0.4",
    "lodash": "4.17.15",
    "mobx": "^5.15.4",
    "mobx-react-lite": "^2.0.7",
    "polished": "^3.6.4",
    "preact": "^10.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-focus-on": "^3.4.1",
    "react-window": "^1.8.5",
    "recoil": "0.0.8",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-decorators": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-react": "7.10.1",
    "@babel/preset-typescript": "7.10.1",
    "@emotion/babel-preset-css-prop": "^11.0.0-next.10",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.3.3",
    "@snowpack/app-scripts-react": "1.0.6",
    "@snowpack/plugin-babel": "1.0.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@types/lodash": "4.14.154",
    "@types/node": "^14.0.6",
    "@types/preval.macro": "^3.0.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-window": "^1.8.2",
    "@types/recoil": "0.0.0",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@types/testing-library__react": "^10.0.1",
    "babel-plugin-macros": "2.8.0",
    "babel-plugin-lodash": "3.3.4",
    "fake-indexeddb": "^3.0.1",
    "jest": "26.0.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "preval.macro": "^5.0.0",
    "react-refresh": "^0.8.3",
    "serve": "^11.3.1",
    "snowpack": "2.1.0",
    "source-map-explorer": "^2.4.2",
    "tailwindcss": "^1.4.6",
    "twin.macro": "^1.3.0",
    "typescript": "3.9.3",
    "typescript-plugin-tw-template": "^2.0.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "ignorePatterns": [
      "/node_modules/",
      "/src/node_modules/",
      "/build/"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "useRecoilCallback"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "quoteProps": "consistent",
    "trailingComma": "all"
  }
}
